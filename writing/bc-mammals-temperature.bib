	journaltitle = {Environmental Reviews},
	shortjournal = {Environ. Rev.},
	author = {Woo-Durand, Catherine and Matte, Jean-Michel and Cuddihy, Grace and {McGourdji}, Chloe L. and Venter, Oscar and Grant, James W.A.},
