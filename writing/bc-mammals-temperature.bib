	author = {Xu, Wenjing and Barker, Kristin and Shawler, Avery and Van Scoyoc, Amy and Smith, Justine A. and Mueller, Thomas and Sawyer, Hall and Andreozzi, Chelsea and Bidder, Owen R. and Karandikar, Harshad and Mumme, Steffen and Templin, Elizabeth and Middleton, Arthur D.},
